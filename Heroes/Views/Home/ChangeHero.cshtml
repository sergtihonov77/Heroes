@model Heroes.Models.Hero

@{
    ViewBag.Title = "ChangeHero";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Создание нового героя</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal aside">
        <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.HeroId)
            @Html.HiddenFor(model => model.AvatarUri)
            @Html.HiddenFor(model => model.Class)
            @Html.HiddenFor(model => model.Race)
            @Html.HiddenFor(model => model.Description)
            @Html.HiddenFor(model => model.Gold)
            @Html.HiddenFor(model => model.Health)
            @Html.HiddenFor(model => model.Mann)
            @Html.HiddenFor(model => model.Power)
            @Html.HiddenFor(model => model.Ability)
            @Html.HiddenFor(model => model.Intelligence)

            <div class="form-group">
                <span class="control-label">Введите имя для своего нового персонажа:</span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
    </div>


        <section class="section">
            <div class="col-md-4">
                <a href="#" class =" imgchnghr thumbnail ">
                    <img src="@Url.Content(Model.AvatarUri)" width="300" height="300" />
                </a>
            </div>
  
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Class)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Class)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Gold)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Gold)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Health)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Health)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Mann)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Mann)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Armor)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Armor)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Power)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Power)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Ability)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ability)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Intelligence)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Intelligence)
                </dd>
            </dl>
        </section>


}

<div>
    <p>@Html.ActionLink("Back", "BackToListChange", new { id = Model.HeroId })</p>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
