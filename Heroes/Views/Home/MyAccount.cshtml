@model Heroes.Models.Hero

@{
    ViewBag.Title = "MyAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <h2 class="divind">@Model.Name</h2>
    <div class="row">
        <div class=" col-md-offset-1 col-md-6">
            
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.Race)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Race)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Class)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Class)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Gold)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Gold)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Health)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Health)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Mann)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Mann)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Armor)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Armor)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Power)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Power)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Ability)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ability)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Intelligence)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Intelligence)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
     
                <dt>
                    @Html.DisplayNameFor(model => model.Items)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Items)
                </dd>
            </dl>
            <a href="~/Home/MyHeroes" class="btn btn-primary">Назад <i class="fa fa-level-down"></i></a>
        </div>

        <div class="col-md-4 ">
            <div id="carousl" class="carousel slide">

                <!--Индикаторы сладов-->
                <ol class="carousel-indicators">
                   <!-- <li class="active" data-target="#carousl" data-slide-to="0"></li> -->
                    @for (int i = 0; i <= (Model.Items == null ? 1 : Model.Items.ToArray().Length); i++)
                    {
                        <li data-target="#carousl" data-slide-to="@i"></li>

                    }
                </ol>

                <!--Слайды, контент-->
                <div class="carousel-inner divind">
                    <div class="item active">
                        <img class=" img-rounded" src="~/Pictures/start.jpg" height="200" width="270" />
                        <div class="carousel-caption">
                            <h3>111</h3>
                        </div>
                    </div>

                    @{
                        if (Model.Items != null)
                        {

                            foreach (Heroes.Models.Item it in Model.Items)
                            {
                            <div class="item">
                                <img class="img-circle imgind img-thumbnail" src="@Url.Content(it.IconUri)" />
                                <div class="carousel-caption">
                                    <h2>@it.Mark</h2>
                                </div>
                            </div>
                              }
                            }
                        }
                </div>

                <!--Стрелки переключатели слайдов-->
                <a href="#carousl" class="right carousel-control" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
                <a href="#carousl" class="left carousel-control" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
            </div>
        </div>
    </div>   
    
</div>
