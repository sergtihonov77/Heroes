@model Heroes.Models.Hero

@{
    ViewBag.Title = "ChangeHero";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="divind">Создание нового героя</h2>
<div class="asidecr">

    @using (Html.BeginForm(new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()




        <div class="form-horizontal">
            <div class="alert alert-info divind" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                Введите имя нового персонажа!
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.HeroId)
            @Html.HiddenFor(model => model.AvatarUri)
            @Html.HiddenFor(model => model.Class)
            @Html.HiddenFor(model => model.Race)
            @Html.HiddenFor(model => model.Description)
            @Html.HiddenFor(model => model.Gold)
            @Html.HiddenFor(model => model.Health)
            @Html.HiddenFor(model => model.Mann)
            @Html.HiddenFor(model => model.Power)
            @Html.HiddenFor(model => model.Ability)
            @Html.HiddenFor(model => model.Intelligence)
            @Html.HiddenFor(model => model.UserName)

            <div class="form-group ">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group ">
                <div class=" col-md-6">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>

            <dl class="dl-horizontal divind">
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Class)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Class)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Gold)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Gold)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Health)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Health)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Mann)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Mann)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Armor)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Armor)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Power)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Power)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Ability)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ability)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Intelligence)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Intelligence)
                </dd>
            </dl>

            <div>
                @Html.ActionLink("Назад", "BackToListChange", "", new { @class = "btn btn-primary" })
            </div>
        </div>

    }
</div>



    <div class="sectioncr">
        <img class="img-rounded createimg " src="@Url.Content(Model.AvatarUri)" width="350" height="500" />
    </div>
      







@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
